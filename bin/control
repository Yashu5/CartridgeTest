#!/bin/bash

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function start() {
    logf="$OPENSHIFT_PRIYANKA_DIR/logs/PRIYANKA.log"

    if is_PRIYANKA_service_running; then
        echo "`date +"$FMT"`: Application '$OPENSHIFT_APP_NAME' is already running; skipping start()"
        return 0
    fi

    pushd "$OPENSHIFT_REPO_DIR" > /dev/null
    {
        PRIYANKAdir=$(cat .PRIYANKAdir)
        package=$(basename $PRIYANKAdir)

        if [ -f "bin/$package" ]; then
            echo "`date +"$FMT"`: Starting application '$OPENSHIFT_APP_NAME' from bin/$package..."

            nohup "bin/$package" >> $logf 2>&1 &

            ret=$?
            npid=$!
            if [ $ret -eq 0 ]; then
                echo "$npid" > "$OPENSHIFT_PRIYANKA_DIR/pid/PRIYANKA.pid"
            else
                echo "Application '$OPENSHIFT_APP_NAME' failed to start - $ret" 1>&2
                exit $ret
            fi
        else
            echo "WARN: Could not find the compiled application bin/$package, will not start"
        fi
    } >> $logf
}

function stop() {
    if [ -f $OPENSHIFT_PRIYANKA_DIR/pid/PRIYANKA.pid ]; then
        PRIYANKA_pid=$( cat $OPENSHIFT_PRIYANKA_DIR/pid/PRIYANKA.pid 2> /dev/null )
    fi

    if [ -n "$PRIYANKA_pid" ]; then
        logf="$OPENSHIFT_PRIYANKA_DIR/logs/PRIYANKA.log"
        echo "`date +"$FMT"`: Stopping application '$OPENSHIFT_APP_NAME' ..." >> $logf
        /bin/kill $PRIYANKA_pid
        ret=$?
        if [ $ret -ne 0 ]; then
            TIMEOUT="$STOPTIMEOUT"
            while [ $TIMEOUT -gt 0 ] && is_PRIYANKA_service_running ; do
                /bin/kill -0 "$PRIYANKA_pid" >/dev/null 2>&1 || break
                sleep 1
                let TIMEOUT=${TIMEOUT}-1
            done
        fi

        echo "`date +"$FMT"`: Stopped PRIYANKA application '$OPENSHIFT_APP_NAME'" >> $logf
        rm -f $OPENSHIFT_PRIYANKA_DIR/pid/PRIYANKA.pid
    else
        echo "Warning: Application '$OPENSHIFT_APP_NAME' server exists without a pid file.  Use force-stop to kill." 1>&2
    fi
}

function status() {
    if [ is_priyanka_service_running ]; then
        client_result "Application is running"
    else
        client_result "Application is not running"
    fi
}

function tidy() {
  client_message "Emptying log dir: $OPENSHIFT_PRIYANKA_DIR/logs"
  shopt -s dotglob
  rm -rf $OPENSHIFT_PRIYANKA_DIR/logs/*
  rm -rf $OPENSHIFT_PRIYANKA_DIR/tmp/*
}



case "$1" in
  start) start ;;
  stop) stop ;;
  status) status ;;
  tidy)  tidy    ;;
esac
